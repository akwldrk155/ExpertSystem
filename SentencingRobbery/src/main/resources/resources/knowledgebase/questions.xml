            </then>
        </response>
        <response>
            <text>Medium</text>
            <then>
                <fact name="success">medium</fact>
            </then>
        </response>
        <response>
            <text>High (CHF 10000 or higher)</text>
            <then>
                <fact name="success">severe</fact>
            </then>
        </response>
    </question>
